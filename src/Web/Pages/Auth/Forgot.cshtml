@page
@model Forgot
@{
    Layout = "_TwoColumnPage";
    ViewBag.Title = "Forgot Password";
}

@section Primary
{
    <partial name="_ValidationSummary"/>

    <form method="post" class="card">
        <div class="card-body">
            @Html.EditorFor(x => x.Email, null, new { autofocus = "autofocus" })
        </div>
        <div class="card-footer">
            <div class="d-flex">
                <input type="submit" value="Reset Password" class="btn btn-primary ms-auto" data-testid="ForgotButton"/>
            </div>
        </div>
    </form>
}

@section Secondary
{
    @{
        var title = "Forgotten your password?";
        var body = "Just enter your email address that you used to register and we will email you a link to reset your password.";
        @await Html.PartialAsync("_Help", (title, body))
    }
}